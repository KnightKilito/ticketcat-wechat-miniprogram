page{
  overflow-x:hidden;
  height: auto;
  /* background-color:#e8e9ee; */
  background: -webkit-linear-gradient(top,#e4e8f5,#e8e9ee);
}

.normal{
  width: 480rpx;
  height: 60rpx;
  /* background-color: red; */
  margin: 80rpx auto;
}
.box{
  width: 160rpx;
  height: 80rpx;
  float: left;
}

.float{
  float: left;
}

/* 银幕 */
.visual_screen {
  height: 30rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  overflow: hidden;
  margin-bottom: 10rpx;
  /* background-color: blueviolet; */
}
.screen {
  margin-top: 0;
  padding: 0;
  height: 30vw;
  width: 100vw;
  box-sizing: border-box;
  border: 15rpx solid #51cad3;
  border-radius: 50%;
  /* background-color: blueviolet; */
}
/* 提示词 */
.visual_title {
  font-size: 23rpx;
  width: 100%;
  height: 20rpx;
  text-align: center;
  color: #6d6d6d;
  margin-bottom: 30rpx;
  /* background-color: blueviolet; */
}
.seatN, .seatE{
  height: 4vw;
  width: 4vw;
  margin: 1vw;
  border-radius: 8rpx;
  box-sizing: border-box;
}
.seatNormal, .seatExcellent, .seatNone, .seatChosen, .selected{
  height: 4vw;
  width: 4vw;
  margin: 1vw;
  border-radius: 8rpx;
  box-sizing: border-box;
  float: left;
}
.visual_seatings .seatNormal, .visual_seatings .seatExcellent,.visual_seatings .seatChosen, .visual_seatings .selected{
  height: 6vw;
  width: 6vw;
  margin: 2vw 1vw;
  border-radius: 8rpx;
  box-sizing: border-box;
  float: left;
}
.seatNormal {
  border: 1rpx solid #63c0c0;
}
.seatChosen {
  border: 1rpx solid rgb(19, 204, 118);
  background-color: rgb(19, 204, 118);
}
.selected {
  border: 1rpx solid #ee1515;
  background-color: #ee1515;
}
.seatExcellent {
  border: 1rpx solid #f18e14;
}
.seatNone {
  background-color: #da2c2c;
  border: 1rpx solid rgb(223, 48, 48);
}
.visual_seatings {
  background-color:red;
  width: 600rpx;
  margin: 80rpx auto;
  height: auto;
}

.row{
  height: auto;
  width: 30rpx;
  /* background-color:red; */
  float: left;
  margin: 56rpx 0rpx 100rpx 30rpx; 
}
.rowtitle{
  height: 60rpx;
  width: 30rpx;
  /* border: 2rpx solid yellow; */
  float: left;
  color:gray;
  font-size: 30rpx;
  margin-top: 14rpx;
  line-height: 40rpx;
}

/* 底部 */
.bottom{
  position: absolute;
  bottom: 0rpx;
  width: 100%;
  height: 470rpx;
  background-color: white;
}



.notice-safearea{
    position: absolute;
    bottom: 430rpx;
    width: 100%;
    height: 60rpx;
    border-radius: 40rpx;
    background-color: white;
}
.mynotice{
  border-radius: 30rpx;
}
.our{
  float: left;
  color: gray;
  width: 100%;
  height: 80rpx;
  margin: -80rpx 0;
  text-align: center;
  font-size: 36rpx;
  /* background-color: greenyellow; */
}
.name{
  float: left;
  width: 60%;
  height: 60rpx;
  margin-top: 80rpx;
  margin-left: 50rpx;
  font-size: 38rpx;
  /* background-color: greenyellow; */
}
.time{
  color: gray;
  float: left;
  width: 60%;
  height: 60rpx;
  font-size: 26rpx;
  margin: 15rpx 0 0 0;
  margin-left: 50rpx;
  font-size: 32rpx;
  /* background-color: greenyellow; */
}
.change{
  color: rgb(43, 119, 233);
  float: left;
  width: 26%;
  height: 60rpx;
  font-size: 26rpx;
  margin-top: -16rpx;
  margin-left: 30rpx;
  font-size: 36rpx;
  /* background-color: greenyellow; */
}
.order{
  width: 100%;
  height: 50rpx;
  /* background-color: pink; */
  margin-top: 220rpx;
}
.tag{
  color: #057ceb;
  border: 1px solid #057ceb;
  background-color: white;
  border-radius: 10rpx;
  padding: 3rpx;
  float: left;
  margin-left: 30rpx;
  width: 140rpx;
  text-align: center;
}

/* 按钮区 */
.buttonBox{
  position: absolute;
  width: 100%;
  bottom: 6vh;
}
button {
  font-size: 35rpx;
  background-color: rgb(250, 77, 114);
  color: white;
  border-radius: 98rpx;
}
/* 按下变颜色 */
.hover {
  top: 3rpx;
  background:  rgb(216, 118, 134);
}
.pleaseSelect {
    color:rgb(240, 197, 112);
}
