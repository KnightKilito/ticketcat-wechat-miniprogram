.userinfo-avatar>image{
  width: 188rpx;
  height: 188rpx;
}
.username{
  position: absolute;
  top: 170rpx;
  left: 280rpx;
  font-size: 40rpx;
  color: #fff;
  /* background-color: red; */
  width: 400rpx;
}

.upload-btn{
  position: relative;
  height: 200rpx !important;
